[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

[project]
name = "{{ server_name_normalized }}"
version = "0.1.0"
description = "Auto-generated MCP server"
requires-python = ">=3.11"
dependencies = [
{% for dep in dependencies %}
    "{{ dep }}",
{% endfor %}
]

[project.optional-dependencies]
dev = [
    "pytest>=8.0.0",
    "pytest-asyncio>=0.24.0",
]
{% if production_deps %}
production = [
{% for dep in production_deps %}
    "{{ dep }}",
{% endfor %}
]
{% endif %}
